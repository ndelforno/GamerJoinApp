
<h1>Welcome to your gamer hub</h1>
<div class="xbox_profile">
  <h2 id ="username"><%= @user.username %></h2>
  <%= image_tag @xboxprofile["displayPicRaw"], :class => "Gamer_pic" %>
  <p>Xuid: <%= @xuid %></p>
  <p>Gamerscore: <%= @xboxprofile["gamerScore"] %>G - Membership: <%= @xboxprofile["detail"]["accountTier"] %> - Reputation: <%= @xboxprofile["xboxOneRep"] %> </p>
  <p>Friends: <%= @xboxprofile["detail"]["followerCount"]  %></p>
  <br>
</div>


<h2>Your Xbox Games</h2>
<% @xboxonegames["titles"].each do |game| %>
<div class = "game">
  <h3><%= game["name"] %></h3>
    <p><%= game["currentGamerscore"] %>G<p>
    <p>Last success: <%= game["lastUnlock"] %></p>
  <% end %>
</div>
